{
    "compilerOptions": {
        "target": "esnext",
        "module": "es2015",
        "moduleResolution": "node",
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "paths": {
            "*": [
                "*",
                "node_modules/*"
            ]
        },
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react",
        "jsxFactory": "h",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "sourceMap": true
    },
    "files": [
        "src/App.tsx"
    ]
}